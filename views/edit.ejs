
<%- include('main_features/head') %>

    <form action="/web/blog-update" method="post" class="m-5 p-5">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" value="<%= blog.title %>" class="form-control" id="title" placeholder="Enter blog title">
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" id="description" rows="3"><%= blog.description %></textarea>
            <input type="hidden" name="id" value="<%= blog._id %>">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>

<%- include('main_features/footer') %>

